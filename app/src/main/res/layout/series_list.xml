<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/small_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_padding">

            <ImageView
                android:id="@+id/series_image"
                android:layout_width="@dimen/series_image_list_size"
                android:layout_height="@dimen/series_image_list_size"
                android:scaleType="fitXY"
                tools:src="@tools:sample/avatars" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/series_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingHorizontal="@dimen/small_padding"
            tools:text="@string/bangladesh_premier_league_2023" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/browse_series"
            android:paddingHorizontal="@dimen/card_horizontal_padding"
            android:paddingVertical="@dimen/card_vertical_padding"
            android:src="@drawable/ic_arrow_right"
            app:tint="?attr/colorPrimary" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>